<h3>Books</h3>
<table> 
  <thead> 
    <tr>
      <th>title</th>
      <th>body</th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %> </td> 
        <td>
          <%= link_to "Show", book_path(book.id) %> 
          <%= link_to "Edit", edit_book_path(book.id) %>
          <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
      </tr> 
  <% end %> 
  </tbody> 
</table> 

<h3>New book</h3> 
<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %> 
  </ul>
<% end %>

<!-- form_for部分 --> 
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>
<br><%= f.submit 'Create Book' %></br>

<% end %>
   
  






